# === Database Configuration ===
DB_HOST=localhost
DB_PORT=3306

DB_NAME=your_database_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_ROOT_PASSWORD=your_root_password

# Full JDBC URL (used by Spring Boot)
# Example: jdbc:mysql://localhost:3306/your_database_name
DB_URL=jdbc:mysql://${DB_HOST}:${DB_PORT}/${DB_NAME}

# Gmail API Credentials
# ===============================
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token
GMAIL_USER_EMAIL=your_email@example.com


# Server & Security Config
# ===============================
PORT=8000

# ðŸ“Œ Notes
# ===============================
# - DB_URL is NOT automatically interpolated; the full value must set if using it directly.
# - GMAIL_USER_EMAIL should match the account authorized in the Gmail OAuth flow.
# - Never commit your real `.env` file to version control.
